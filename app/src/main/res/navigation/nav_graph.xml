<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_frg">

    <fragment
        android:id="@+id/msg_frg"
        android:name="java.edu.utexas.cs.happinessjar.MessageFragment"
        android:label="message_fragment"
        tools:layout="@layout/fragment_message">
        <action
            android:id="@+id/msg_to_setting"
            app:destination="@id/settings_frg"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_down"
            app:popEnterAnim="@anim/slide_in_up"
            app:popExitAnim="@anim/slide_out_down"/>
        <action
            android:id="@+id/msg_to_home"
            app:destination="@id/home_frg"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_down"
            app:popEnterAnim="@anim/slide_in_up"
            app:popExitAnim="@anim/slide_out_down"/>
    </fragment>
    <fragment
        android:id="@+id/settings_frg"
        android:name="java.edu.utexas.cs.happinessjar.SettingFragment"
        android:label="settings_fragment"
        tools:layout="@layout/fragment_setting">
        <action
            android:id="@+id/setting_to_msg"
            app:destination="@id/msg_frg"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_down"
            app:popEnterAnim="@anim/slide_in_up"
            app:popExitAnim="@anim/slide_out_down"/>
        <action
            android:id="@+id/setting_to_home"
            app:destination="@id/home_frg"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_down"
            app:popEnterAnim="@anim/slide_in_up"
            app:popExitAnim="@anim/slide_out_down"/>
    </fragment>
    <fragment
        android:id="@+id/home_frg"
        android:name="java.edu.utexas.cs.happinessjar.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/home_to_msg"
            app:destination="@id/msg_frg"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_down"
            app:popEnterAnim="@anim/slide_in_up"
            app:popExitAnim="@anim/slide_out_down"/>
        <action
            android:id="@+id/home_to_setting"
            app:destination="@id/settings_frg"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_down"
            app:popEnterAnim="@anim/slide_in_up"
            app:popExitAnim="@anim/slide_out_down"/>
    </fragment>

</navigation>